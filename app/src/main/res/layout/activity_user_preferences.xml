<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backscreen"
    tools:context=".UserPreferencesActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="100dp"
        android:fontFamily="@font/poppinsbold"
        android:text="User Preferences"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/temps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="257dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Temperature"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/savePref_button"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Save"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/predict_button"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Predict"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.758"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="#22000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.324"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotF" />

    <EditText
        android:id="@+id/coldF"
        android:layout_width="60dp"
        android:layout_height="37dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="95dp"
        android:ems="10"
        android:hint="From"
        android:inputType="text"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="26dp"
        android:layout_weight="1"
        android:text="-"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/comfortableF"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/coldT"
        android:layout_width="60dp"
        android:layout_height="37dp"

        android:layout_marginStart="14dp"
        android:layout_marginTop="95dp"
        android:ems="10"
        android:hint="To"
        android:inputType="text"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="90dp"
        android:layout_height="37dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="285dp"
        android:gravity="center"
        android:text="Cold :"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temps" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="90dp"
        android:layout_height="37dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="26dp"

        android:gravity="center"
        android:text="Comfortable :"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/comfortableF"
        android:layout_width="60dp"
        android:layout_height="37dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="From"
        android:inputType="text"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/coldF" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="95dp"
        android:layout_weight="1"
        android:text="-"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/coldF"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/comfortableT"
        android:layout_width="60dp"
        android:layout_height="37dp"

        android:layout_marginStart="14dp"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="To"
        android:inputType="text"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/coldT" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="90dp"
        android:layout_height="37dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="26dp"

        android:gravity="center"
        android:text="Hot :"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/hotF"
        android:layout_width="60dp"
        android:layout_height="37dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="From"
        android:inputType="text"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/comfortableF" />

    <EditText
        android:id="@+id/hotT"
        android:layout_width="60dp"
        android:layout_height="37dp"

        android:layout_marginStart="14dp"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="To"
        android:inputType="text"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/comfortableT" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="26dp"
        android:layout_weight="1"
        android:text="-"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/hotF"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

</androidx.constraintlayout.widget.ConstraintLayout>