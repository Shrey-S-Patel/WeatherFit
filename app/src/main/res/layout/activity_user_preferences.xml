<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserPreferencesActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="100dp"
        android:text="User Preferences"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:fontFamily="@font/poppinsbold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/temps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="257dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Temperature"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/temps"
        app:layout_constraintTop_toBottomOf="@+id/temps">

        <TextView
            android:layout_width="90dp"
            android:layout_height="37dp"
            android:gravity="center"
            android:text="Cold :"
            android:textStyle="bold"
            android:textColor="#000" />

        <EditText
            android:id="@+id/coldF"
            android:layout_width="60dp"
            android:layout_height="37dp"
            android:layout_marginLeft="15dp"
            android:ems="10"
            android:hint="From"
            android:inputType="text"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="-"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/coldT"
            android:layout_width="60dp"
            android:layout_height="37dp"
            android:layout_marginLeft="15dp"

            android:ems="10"
            android:hint="To"
            android:inputType="text"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="102dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:layout_width="90dp"
            android:layout_height="37dp"
            android:gravity="center"
            android:text="Comfortable :"
            android:textStyle="bold"

            android:textColor="#000" />

        <EditText
            android:id="@+id/comfortableF"
            android:layout_width="60dp"
            android:layout_height="37dp"
            android:layout_marginLeft="15dp"
            android:ems="10"
            android:hint="From"
            android:inputType="text"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="-"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/comfortableT"
            android:layout_width="60dp"
            android:layout_height="37dp"
            android:layout_marginLeft="15dp"

            android:ems="10"
            android:hint="To"
            android:inputType="text"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="102dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:layout_width="90dp"
            android:layout_height="37dp"
            android:gravity="center"
            android:text="Warm :"
            android:textStyle="bold"

            android:textColor="#000" />

        <EditText
            android:id="@+id/warmF"
            android:layout_width="60dp"
            android:layout_height="37dp"
            android:layout_marginLeft="15dp"
            android:ems="10"
            android:hint="From"
            android:inputType="text"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="-"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/warmT"
            android:layout_width="60dp"
            android:layout_height="37dp"
            android:layout_marginLeft="15dp"

            android:ems="10"
            android:hint="To"
            android:inputType="text"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="102dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
            android:layout_width="90dp"
            android:layout_height="37dp"
            android:gravity="center"
            android:text="Hot :"
            android:textStyle="bold"

            android:textColor="#000" />

        <EditText
            android:id="@+id/hotF"
            android:layout_width="60dp"
            android:layout_height="37dp"
            android:layout_marginLeft="15dp"
            android:ems="10"
            android:hint="From"
            android:inputType="text"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="-"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/hotT"
            android:layout_width="60dp"
            android:layout_height="37dp"
            android:layout_marginLeft="15dp"

            android:ems="10"
            android:hint="To"
            android:inputType="text"
            android:textSize="15dp" />

    </LinearLayout>

    <Button
        android:id="@+id/savePref_button"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Save"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/predict_button"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Predict"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.766"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
        app:layout_constraintStart_toStartOf="@+id/linearLayout4"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

</androidx.constraintlayout.widget.ConstraintLayout>